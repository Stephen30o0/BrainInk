# Production Environment Variables for KANA Backend on Render

# Node Environment
NODE_ENV=production

# Database settings - Use Render's environment variables
# These should be set in Render dashboard, not hardcoded here
# DATABASE_URL will be injected by Render

# AI API Keys (set these in Render dashboard for security)
# GOOGLE_API_KEY=your_production_google_api_key
# OPENAI_API_KEY=your_production_openai_api_key  
# CORE_API_KEY=your_production_core_api_key

# JWT token settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application settings
ENVIRONMENT=production
DEBUG=false

# CORS settings for production
CORS_ORIGIN=https://brain-ink.vercel.app

# Port (Render will set this automatically)
# PORT will be injected by Render
