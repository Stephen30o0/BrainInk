{
  "version": 2,
  "builds": [
    {
      "src": "kana-backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "quiz/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "kana-backend/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "quiz/index.html" 
    }
  ]
}
